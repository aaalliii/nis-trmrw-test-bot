doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Telegram Bot - Dark Theme
        style.
            body {
                background-color: #1a1a1a;
                color: #f0f0f0;
                font-family: 'Arial', sans-serif;
                padding: 20px;
                margin: 0;
                line-height: 1.6;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
            }
            h1, h2, h3, h4, h5, h6 {
                color: #f0f0f0;
                margin-top: 0;
            }
            p {
                margin: 1em 0;
                word-wrap: break-word;
            }
            a {
                color: #1e90ff;
                text-decoration: none;
            }
            a:hover {
                text-decoration: underline;
            }
            img {
                max-width: 100%;
                height: auto;
                border-radius: 10px;
                margin: 10px 0;
            }
            pre {
                background-color: #333;
                color: #f0f0f0;
                padding: 10px;
                border-radius: 5px;
                overflow-x: auto;
                max-width: 100%;
            }
            blockquote {
                border-left: 4px solid #555;
                padding-left: 10px;
                color: #aaa;
            }
            .container {
                max-width: 600px;
                width: 100%;
            }
    body
        .container
            != content
